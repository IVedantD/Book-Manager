<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.tailwindcss.com"></script>
  <title>Books</title>
</head>
<body class="bg-gray-900 text-white">
  <div class="container mx-auto p-10">
    <div class="text-center mb-10">
      <h1 class="text-4xl font-bold">My Book Collection</h1>
      <a href="/" class="text-blue-400 hover:underline">Add a New Book</a>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <% if(books.length > 0) { %>
        <% books.forEach(book => { %>
          <div class="bg-gray-800 rounded-lg shadow-lg p-6">
            <img
              src="<%= book.image %>"
              alt="<%= book.title %>"
              class="w-full h-48 object-cover rounded-lg"
            />
            <h2 class="text-xl font-bold mt-4"><%= book.title %></h2>
            <p class="text-gray-400">By <%= book.author %></p>
            <p class="text-gray-500 text-sm mt-2">Genre: <%= book.genre %></p>
            <p class="text-gray-500 text-sm">Published: <%= book.publishedYear %></p>
            <div class="mt-4 flex justify-between">
              <a href="/edit/<%= book._id %>" class="text-yellow-400 hover:underline">Edit</a>
              <a href="/delete/<%= book._id %>" class="text-red-500 hover:underline">Delete</a>
            </div>
          </div>
        <% }); %>
      <% } else { %>
        <p class="text-center text-gray-400">No books found.</p>
      <% } %>
    </div>
  </div>
</body>
</html>
